<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_download_map"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#fafafa"
    android:padding="20dp"
    android:layout_margin="16dp"
    tools:context=".mainviews.MainActivity">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Adj nevet a kiválasztott térképrészletnek!"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edittext_mapname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginBottom="24dp"
        android:layout_below="@id/dialog_title"
        android:hint="Térkép neve"
        android:textSize="15sp" />

    <Button
        android:id="@+id/dialog_positive_btn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/edittext_mapname"
        android:textColor="@color/colorPrimary"
        android:padding="8dp"
        android:text="LETÖLTÉS" />

    <Button
        android:id="@+id/dialog_negative_btn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_below="@id/edittext_mapname"
        android:layout_toLeftOf="@id/dialog_positive_btn"
        android:textColor="@color/colorPrimary"
        android:padding="8dp"
        android:text="MÉGSE" />
</RelativeLayout>